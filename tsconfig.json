{
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/globals"
  ]
}
